{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "vuex": [
        "./node_modules/vuex/types/index.d.ts"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "@types/lodash"
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
